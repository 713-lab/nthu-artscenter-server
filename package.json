    "beforetest": "node script/initialize.js",
    "test": "jest --forceExit --coverage --verbose",
    "jest": "jest",
    "docs": "typedoc --out docs src",
    "createuser": "node script/create_user.js",
    "cleanuser": "node script/clean_user.js"
  },
