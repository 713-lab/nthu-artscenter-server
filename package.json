    "@types/express": "^4.17.3",
    "@types/express-session": "^1.17.0",
    "@types/jest": "^25.1.4",
    "@types/morgan": "^1.9.0",
    "@types/multer": "^1.4.2",
    "@types/node": "^13.9.1",
    "@types/sharp": "^0.24.0",
    "@types/supertest": "^2.0.8",
    "@types/validator": "^12.0.1",
    "install": "^0.13.0",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.1",
    "tslint": "^6.1.0",
    "typedoc": "^0.17.3",
    "typescript": "^3.8.3"
