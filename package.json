  "license": "ISC",
  "dependencies": {
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "connect-redis": "^4.0.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "fs": "0.0.1-security",
    "morgan": "^1.9.1",
    "morgan-body": "^2.4.8",
    "multer": "^1.4.2",
    "pg": "^7.18.2",
    "pg-hstore": "^2.3.3",
    "pm2": "^4.2.3",
    "pug": "^2.0.4",
    "redis": "^3.0.2",
    "sequelize": "^5.21.5",
    "sharp": "^0.25.1"
  },
